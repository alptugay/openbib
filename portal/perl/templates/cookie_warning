<script language="JavaScript" type="text/javascript" src="/js/jquery.ihavecookies.js?5"></script>

<script>
    $(document).ready(function() {
        $('body').ihavecookies({
            title: '&#x1F36A; Akzeptieren von Cookies',
            message: 'Für eine bestmögliche und vollständige Nutzbarkeit verwendet diese Webseite Cookies. Um fortzufahren müssen Sie die Verwendung von Cookies ausdr&uuml;cklich akzeptieren, ansonsten deaktivieren Sie bitte Cookies in Ihren Browsereinstellungen. Weitere Informationen finden Sie in unserer ',
            delay: 60,
            expires: 30,
            link: '[% path_prefix %]/[% config.get('info_loc') %]/datenschutz.html?l=[% lang %]',
    	    listLabelTitle: 'Diese Cookies sind absolut notwending, damit die Webseite korrekt funktioniert.',
	    listLabelNecessary: 'Absolut notwendige Session-Cookies',
	    titleSelection: 'Wählen Sie die von Ihnen akzeptierten Cookies aus',

            cookieTypes: [
            ],
	    
    	    noSelection: 1,

            uncheckBoxes: true,
            acceptBtnLabel: 'Cookies akzeptieren',
            moreInfoLabel: 'Datenschutzerkl&auml;rung',
            advancedBtnLabel: 'Cookies ausw&auml;hlen'
        });
    });
</script>

